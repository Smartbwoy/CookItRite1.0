<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateMealsActivity.CreateMealActivity"
        android:background="@color/colorPrimary">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <include layout="@layout/recipe_pic_name" android:visibility="gone"/>
        <include layout="@layout/ingredients_methods"/>




        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:elevation="24dp"
                    android:focusable="true"
                    android:shadowColor="@android:color/darker_gray"
                    android:text="@string/cancel"
                    android:textColor="@color/colorPrimary" tools:targetApi="lollipop"/>

            <Button
                    android:id="@+id/next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:elevation="24dp"
                    android:shadowColor="@android:color/darker_gray"
                    android:text="@string/next"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp"
                    android:focusable="true"
                    tools:targetApi="lollipop"/>
        </RelativeLayout>

    </LinearLayout>

    </ScrollView>