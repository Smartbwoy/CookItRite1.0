<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CreateMealsActivity.CreateMealActivity"
        android:background="@color/colorPrimary">


    <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="333dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/meal_image"
            app:srcCompat="@drawable/meal_placeholder"></ImageView>


    <Button
            android:id="@+id/meal_pic_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:elevation="24dp"
            android:shadowColor="@android:color/darker_gray"
            android:text="@string/upload_meal_image"
            android:textColor="@color/colorPrimary"
            android:focusable="true" tools:targetApi="lollipop"/>
    <LinearLayout
            android:id="@+id/section_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingEnd="20dp"
            android:paddingRight="50dp"
            android:paddingBottom="20dp"
            android:visibility="visible"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintVertical_bias="0.759" tools:ignore="MissingConstraints">

        <TextView
                android:id="@+id/mealName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/enter_recipe_name"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"/>

        <EditText
                android:id="@+id/recipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" tools:targetApi="o"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:elevation="24dp"
                    android:focusable="true"
                    android:shadowColor="@android:color/darker_gray"
                    android:text="@string/cancel"
                    android:textColor="@color/colorPrimary" tools:targetApi="lollipop"/>

            <Button
                    android:id="@+id/next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:elevation="24dp"
                    android:shadowColor="@android:color/darker_gray"
                    android:text="@string/next"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp" android:focusable="true" tools:targetApi="lollipop"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>